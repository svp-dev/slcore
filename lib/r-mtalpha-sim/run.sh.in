#! /bin/sh
# $Id$
MGSIM_ALPHA=${MGSIM_ALPHA:-@MGSIM_ALPHA@}
program=${1:?}
datafile=${2:?}
DEBUGGER=${DEBUGGER:-gdb --args}
shift
shift
if ! test -x "$program"; then
    echo "$0: $program: not an executable" >&2
    exit 1
fi
if ! test -r "$datafile"; then
    echo "$0: $datafile: file not found or not readable" >&2
    exit 1
fi

if ! "$MGSIM_ALPHA" --help >/dev/null 2>&1; then
  echo "$0: cannot find simulator (MGSIM_ALPHA=$MGSIM_ALPHA)." >&2
  exit 1
fi

if test -n "$NCORES"; then
   SIMARGS="$SIMARGS -o NumProcessors=$NCORES"
fi

do_debug=
if test -n "$DEBUG"; then
   SIMARGS="$SIMARGS -i"
   do_debug=$DEBUGGER
fi
if test -n "$VERBOSE"; then
   echo "$0: running: $do_debug $MGSIM_ALPHA $SIMARGS -t $* -L16 $datafile $program" >&2
fi  
exec $do_debug $MGSIM_ALPHA $SIMARGS -t "$@" -L16 "$datafile" "$program"
